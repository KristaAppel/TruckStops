<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
tools:context="com.kristaappel.truckstops.fragments.SearchFragment"
android:layout_width="match_parent"
android:layout_height="wrap_content">


<!--Layout that holds the entire contents of the searchboxfrag-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--Layout for all search tools-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <!--Layout for left side of search tools-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_weight="0.9">

            <!--Layout for First Search Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Enter Truck Stop Name:"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"/>

                    <EditText
                        android:id="@+id/et_truckStopName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/white"
                        android:backgroundTint="@color/colorLightGrey"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789,'- "
                        android:hint="Truck Stop Name"
                        android:iconifiedByDefault="false"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:queryHint="Truck Stop Name"
                        android:textAppearance="@style/TextAppearance.AppCompat" />

                </LinearLayout>


            </LinearLayout>

            <!--Layout for Second Search Row-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:weightSum="1"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Enter City:"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"/>

                    <EditText
                        android:id="@+id/et_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/white"
                        android:backgroundTint="@color/colorLightGrey"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz. "
                        android:hint="City"
                        android:iconifiedByDefault="false"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:queryHint="City"
                        android:textAppearance="@style/TextAppearance.AppCompat" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Enter State:"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"/>

                    <EditText
                        android:id="@+id/et_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/white"
                        android:backgroundTint="@color/colorLightGrey"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:hint="State"
                        android:iconifiedByDefault="false"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingBottom="4dp"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:queryHint="State"
                        android:textAppearance="@style/TextAppearance.AppCompat" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Enter Zip Code:"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"/>

                    <EditText
                        android:id="@+id/et_zip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/white"
                        android:backgroundTint="@color/colorLightGrey"
                        android:digits="0123456789"
                        android:hint="Zip Code"
                        android:iconifiedByDefault="false"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="5"
                        android:paddingBottom="4dp"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:queryHint="Zip Code"
                        android:textAppearance="@style/TextAppearance.AppCompat" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <!--Layout for right side of search tools               -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="0.1">

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorPrimary"
                android:tint="@color/colorWhite"
                app:srcCompat="@android:drawable/ic_search_category_default"
                android:contentDescription="Search" />

        </LinearLayout>

    </LinearLayout>



    <!--Layout for bottom buttons-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/locationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:tint="@color/colorPrimary"
            app:srcCompat="@android:drawable/ic_menu_mylocation" />

        <Switch
            android:id="@+id/trackingModeSwitch"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Tracking Mode"
            android:textAlignment="viewEnd"/>

        <!--<ToggleButton-->
            <!--android:id="@+id/toggleButton"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:text="ToggleButton" />-->


    </LinearLayout>

</LinearLayout>


</FrameLayout>